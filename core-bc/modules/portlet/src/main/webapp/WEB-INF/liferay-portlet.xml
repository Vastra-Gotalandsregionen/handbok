<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 7.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_7_0_0.dtd">
<liferay-portlet-app>

    <portlet>
        <portlet-name>handbok</portlet-name>
        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <!-- Don't change the friendly-url-mapping without syncing with PortletController.java -->
        <friendly-url-mapping>a</friendly-url-mapping>
        <friendly-url-routes>friendly-url-routes.xml</friendly-url-routes>

        <instanceable>false</instanceable>
        <single-page-application>false</single-page-application>
        <private-session-attributes>true</private-session-attributes>

        <requires-namespaced-parameters>false</requires-namespaced-parameters>
        <header-portlet-javascript>/js/polyfills.js</header-portlet-javascript>
        <footer-portlet-javascript>/js/app.js</footer-portlet-javascript>
    </portlet>

</liferay-portlet-app>