<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

  <service>
    <jsr107:defaults>
      <jsr107:cache name="default" template="cache-template"/>
    </jsr107:defaults>
  </service>

  <!--<persistence directory="java.io.temp" />-->
  <persistence directory="/tmp/ehcache2" />

  <cache-template name="cache-template">
    <listeners>
        <listener>
          <class>se.vgregion.ifeedpoc.cache.EventLogger</class>
          <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
          <event-ordering-mode>UNORDERED</event-ordering-mode>
          <events-to-fire-on>CREATED</events-to-fire-on>
          <events-to-fire-on>UPDATED</events-to-fire-on>
          <events-to-fire-on>EXPIRED</events-to-fire-on>
          <events-to-fire-on>REMOVED</events-to-fire-on>
          <events-to-fire-on>EVICTED</events-to-fire-on>
        </listener>
    </listeners>
    <resources>
      <heap unit="MB">5</heap>
      <offheap unit="MB">10</offheap> <!-- unit of measure is case sensitive! -->
      <disk persistent="true" unit="MB">100</disk>
    </resources>
  </cache-template>

